{
    "parserOptions": {
        "emcaVersion": 5,
        "sourceType": "script"
    },
    "env": {
        "browser": true,
        "node": true
    },
    "globals": {
        "angular": true
    },
    "extends": "eslint:recommended",
    "rules": {
        "no-console": "warn",
        "no-extra-parens": ["warn", "all", { "conditionalAssign": false, "nestedBinaryExpressions": false }],
        "no-prototype-builtins": "error",
        "block-scoped-var": "warn",
        "curly": "warn",
        "dot-location": ["warn", "property"],
        "dot-notation": "warn",
        "eqeqeq": ["error", "smart"],
        "guard-for-in": "error",
        "no-alert": "error",
        "no-caller": "error",
        "no-div-regex": "warn",
        "no-else-return": "warn",
        "no-empty-function": "warn",
        "no-eq-null": "warn",
        "no-extend-native": "error",
        "no-extra-bind": "error",

        // switch statements
        "no-case-declarations": "warn",
        "no-fallthrough": "warn",

        "no-floating-decimal": "warn",
        "no-implicit-coercion": "warn",
        "no-iterator": "error",
        "no-loop-func": "warn",
        "no-multi-spaces": "warn",
        "no-multi-str": "warn",
        "no-native-reassign": "error",
        "no-new-func": "error",
        "no-octal": "error",
        "no-proto": "error",
        "no-redeclare": "warn",
        "no-return-assign": "warn",

        //eval
        "no-eval": "error",
        "no-implied-eval": "error",
        "no-script-url": "error",

        "no-self-assign": "warn",
        "no-self-compare": "warn",
        "no-sequences": "error",
        "no-unmodified-loop-condition": "warn",
        "no-unused-expressions": "warn",
        "no-useless-call": "error",
        "no-useless-concat": "warn",
        "no-useless-escape": "warn",
        "no-warning-comments": "warn",
        "no-void": "error",
        "no-with": "error",
        "radix": "warn",
        "wrap-iife": "warn",
        "yoda": "warn",

        "strict": ["error", "function"],

        "init-declarations": ["warn", "always"],
        "no-catch-shadow": "error",
        "no-delete-var": "warn",
        "no-shadow-restricted-names": "error",
        "no-shadow": "warn",
        "no-undef-init": "error",
        "no-undef": "error",
        "no-unused-vars": "warn",
        "no-use-before-define": "error",

        "callback-return": ["warn", ["res.send", "res.sendStatus", "res.redirect"]],
        "global-require": "warn",
        "handle-callback-err": "warn",
        "no-new-require": "error",
        "no-path-concat": "error",
        "no-process-env": "error",
        "no-process-exit": "error",
        "no-sync": "warn",
        
        "array-bracket-spacing": ["warn", "never", { "objectsInArrays": true, "arraysInArrays": true }],
        "block-spacing": ["warn", "always"],         
        "brace-style": "warn",
        "camelcase": "warn",
        "comma-dangle": ["warn", "only-multiline"],
        "comma-spacing": ["warn", { "before": false, "after": true }],
        "comma-style": ["warn", "last"],
        "computed-property-spacing": ["warn", "never"],
        "eol-last": ["warn", "unix"],
        "func-style": ["warn", "expression"],
        "indent": ["warn", 4],
        "key-spacing": ["warn", { "beforeColon": false, "afterColon": true, "mode": "strict" }],
        "linebreak-style": ["warn", "unix"],
        "lines-around-comment": ["warn", { "beforeBlockComment": true, "beforeLineComment": true, "allowBlockStart": true }],
        "max-depth": ["warn", 4],
        "max-len": ["warn", 80],
        "max-statements-per-line": ["warn", { "max": 1 }],
        "newline-per-chained-call": ["warn", { "ignoreChainWithDepth": 2 }],
        "no-array-constructor": "warn",
        "no-bitwise": "warn",
        "no-inline-comments": "warn",
        "no-lonely-if": "warn",
        "no-mixed-operators": "warn",
        "no-multiple-empty-lines": ["warn", { "max": 1 }],
        "no-negated-condition": "warn",
        "no-nested-ternary": "warn",
        "no-new-object": "warn",
        "no-spaced-func": "warn",
        "no-tabs": "error",
        "no-trailing-spaces": "warn",
        "no-underscore-dangle": "warn",
        "no-unneeded-ternary": "warn",
        "no-whitespace-before-property": "warn",
        "object-curly-spacing": ["warn", "always"],
        "one-var": ["warn", "never"],
        "operator-assignment": ["warn", "always"],
        "operator-linebreak": ["warn", "after"],
        "padded-blocks": ["warn", "never"],
        "quote-props": ["warn", "as-needed"],
        "quotes": ["warn", "single", { "avoidEscape": true }],
        "semi-spacing": "warn",
        "semi": ["warn", "always"],
        "space-before-function-paren": ["warn", "never"],
        "space-in-parens": ["warn", "never"],
        "space-infix-ops": "warn",
        "space-unary-ops": "warn",
        "spaced-comment": ["warn", "always"],
        "wrap-regex": "warn"
    }
}
